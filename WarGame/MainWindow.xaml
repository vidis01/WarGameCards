<Window x:Class="WarGameCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Button1" Content="Press Me" Margin="35,302,445,50" Click="Button_Click" FontSize="48" Background="#FFC2A0C8"/>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="55,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="155" Width="275" FontSize="18" Text="" Opacity="0.9"/>
        <Label x:Name="History" Content="History" HorizontalAlignment="Left" Margin="510,20,0,0" VerticalAlignment="Top" Height="50" Width="210" FontSize="16"/>

        <TextBox x:Name="TextBlockHistory" Margin="445,57,0,0" IsReadOnly="True" TextWrapping="Wrap" VerticalAlignment="Top" Height="327" Width="300" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <TextBlock x:Name="TextBlockWinner" HorizontalAlignment="Left" Margin="35,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="75" Width="320" FontSize="24"/>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="150,174,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
